<svg width="800" height="400" viewBox="0 0 800 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#1a3a6c" stop-opacity="0.1"/>
      <stop offset="100%" stop-color="#2962FF" stop-opacity="0.1"/>
    </linearGradient>
    <linearGradient id="personGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#1a3a6c"/>
      <stop offset="100%" stop-color="#2962FF"/>
    </linearGradient>
    <linearGradient id="deviceGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#1a3a6c"/>
      <stop offset="100%" stop-color="#2962FF"/>
    </linearGradient>
    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="5" result="blur"/>
      <feFlood flood-color="#1a3a6c" flood-opacity="0.3" result="coloredBlur"/>
      <feComposite in="SourceGraphic" in2="coloredBlur" operator="over"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="400" fill="url(#bgGradient)"/>
  
  <!-- Connection Lines -->
  <path d="M150 200 L250 200 L250 300 L400 300 L400 100 L550 100 L550 200 L650 200" 
        stroke="#1a3a6c" stroke-width="2" stroke-opacity="0.2" stroke-dasharray="5,5"/>
  <path d="M150 240 L300 240 L300 160 L450 160 L450 250 L650 250" 
        stroke="#1a3a6c" stroke-width="2" stroke-opacity="0.2" stroke-dasharray="5,5"/>
  
  <!-- Central Circle with Accessibility Icon -->
  <circle cx="400" cy="200" r="120" fill="white" filter="drop-shadow(0 10px 20px rgba(0,0,0,0.15))"/>
  
  <!-- Stylized Accessibility Icon -->
  <circle cx="400" cy="150" r="25" fill="url(#personGradient)" filter="url(#glow)"/>
  <path d="M380 180 L400 230 L420 180" stroke="url(#personGradient)" stroke-width="15" stroke-linecap="round" filter="url(#glow)"/>
  <line x1="370" y1="200" x2="430" y2="200" stroke="url(#personGradient)" stroke-width="15" stroke-linecap="round" filter="url(#glow)"/>
  <path d="M380 235 L370 260" stroke="url(#personGradient)" stroke-width="10" stroke-linecap="round" filter="url(#glow)"/>
  <path d="M420 235 L430 260" stroke="url(#personGradient)" stroke-width="10" stroke-linecap="round" filter="url(#glow)"/>
  
  <!-- Devices - Top Left -->
  <rect x="150" y="120" width="60" height="40" rx="5" fill="white" filter="drop-shadow(0 3px 6px rgba(0,0,0,0.2))"/>
  <rect x="160" y="130" width="40" height="20" rx="2" fill="url(#deviceGradient)" opacity="0.8"/>
  
  <!-- Devices - Top Right -->
  <rect x="590" y="120" width="60" height="40" rx="5" fill="white" filter="drop-shadow(0 3px 6px rgba(0,0,0,0.2))"/>
  <rect x="600" y="130" width="40" height="20" rx="2" fill="url(#deviceGradient)" opacity="0.8"/>
  
  <!-- Mobile Device - Bottom Center-Left -->
  <rect x="250" y="320" width="30" height="50" rx="5" fill="white" filter="drop-shadow(0 3px 6px rgba(0,0,0,0.2))"/>
  <rect x="255" y="325" width="20" height="35" rx="2" fill="url(#deviceGradient)" opacity="0.8"/>
  <circle cx="265" cy="365" r="3" fill="#1a3a6c"/>
  
  <!-- Tablet Device - Bottom Center-Right -->
  <rect x="520" y="320" width="50" height="40" rx="5" fill="white" filter="drop-shadow(0 3px 6px rgba(0,0,0,0.2))"/>
  <rect x="525" y="325" width="40" height="30" rx="2" fill="url(#deviceGradient)" opacity="0.8"/>
  
  <!-- Accessibility Features Icons -->
  <!-- Screen Reader Icon - Left -->
  <circle cx="200" y="250" r="15" fill="white" filter="drop-shadow(0 3px 6px rgba(0,0,0,0.2))"/>
  <path d="M194 250 L206 250 M195 245 L205 245 M195 255 L205 255" stroke="#1a3a6c" stroke-width="1.5" stroke-linecap="round"/>
  
  <!-- Touch/Voice Icon - Right -->
  <circle cx="600" y="250" r="15" fill="white" filter="drop-shadow(0 3px 6px rgba(0,0,0,0.2))"/>
  <path d="M600 245 Q605 242 605 250 Q605 258 597 253" stroke="#1a3a6c" stroke-width="1.5" fill="none"/>
  
  <!-- Tamil Language Icon - Middle Bottom -->
  <rect x="365" y="320" width="70" height="30" rx="15" fill="#1a3a6c" filter="drop-shadow(0 3px 6px rgba(0,0,0,0.2))"/>
  <text x="380" y="340" font-family="Arial" font-size="14" fill="white" font-weight="bold">தமிழ்</text>
  
  <!-- Label -->
  <rect x="330" y="50" width="140" height="30" rx="15" fill="#1a3a6c" filter="drop-shadow(0 3px 6px rgba(0,0,0,0.2))"/>
  <text x="350" y="70" font-family="Arial" font-size="14" fill="white" font-weight="bold">ACCESSIBLE</text>
</svg> 